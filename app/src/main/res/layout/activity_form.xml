<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#070A52"
    android:orientation="vertical"
    tools:context=".FormActivity"
    android:animateLayoutChanges="true"
    tools:ignore="ExtraText">


    //header

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/_5sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Create Resume"
            android:textColor="@color/white"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold" />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/btnsave"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_50sdp"
            android:background="@color/white"
            android:text="Save"/>
    </LinearLayout>

    //down page

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/_235sdp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/frame"
            android:orientation="vertical">
            // Personal details

            // detail header

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_5sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Personal Details"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp" />

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">



                    //profile

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_marginVertical="@dimen/_10sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_2sdp"
                                android:src="@drawable/profileimg" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginHorizontal="@dimen/_2sdp"
                                android:text="Upload Picture"
                                android:textSize="@dimen/_9ssp" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/bg"
                                android:text="Remove"
                                android:textColor="#ff0000"
                                android:textSize="@dimen/_8ssp" />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    // info

                    <androidx.cardview.widget.CardView
                        android:layout_width="293dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_marginVertical="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_20sdp">


                        <LinearLayout
                            android:layout_width="256dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:orientation="vertical">

                            //name upper title

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:orientation="horizontal">

                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="First Name"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_7ssp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_55sdp"
                                    android:text="First Name"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_7ssp" />
                            </LinearLayout>
                            //down title

                            <LinearLayout
                                android:layout_width="@dimen/_190sdp"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp">


                                    <EditText
                                        android:id="@+id/txtname"
                                        android:layout_width="@dimen/_80sdp"
                                        android:layout_height="wrap_content"
                                        android:hint="Jhon doe"
                                        android:inputType="text"
                                        android:maxLines="1"
                                        android:textSize="@dimen/_10ssp" />

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_marginTop="@dimen/_5sdp">


                                    <EditText
                                        android:layout_width="@dimen/_80sdp"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/txtlname"
                                        android:hint="Shrill"
                                        android:inputType="text"
                                        android:maxLines="1"
                                        android:textSize="@dimen/_10ssp" />

                                </androidx.cardview.widget.CardView>


                            </LinearLayout>


                            //Gender upper title

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Gender"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_7ssp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_67sdp"
                                    android:text="Nationality"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_7ssp" />
                            </LinearLayout>
                            //down title

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_10sdp">

                                    <RadioGroup
                                        android:layout_width="@dimen/_80sdp"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <RadioButton
                                            android:layout_width="wrap_content"
                                            android:layout_height="20dp"
                                            android:textSize="@dimen/_10ssp"
                                            android:text="Male"/>
                                        <RadioButton
                                            android:layout_width="wrap_content"
                                            android:layout_height="20dp"
                                            android:textSize="@dimen/_10ssp"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:text="Female"/>
                                        <RadioButton
                                            android:layout_width="wrap_content"
                                            android:layout_height="20dp"
                                            android:layout_marginVertical="@dimen/_5sdp"
                                            android:textSize="@dimen/_10ssp"
                                            android:text="Other"/>
                                    </RadioGroup>

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_marginTop="@dimen/_10sdp">


                                    <EditText
                                        android:layout_width="@dimen/_80sdp"
                                        android:layout_height="wrap_content"
                                        android:hint="Indian"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:inputType="text"
                                        android:maxLines="1"
                                        android:textSize="@dimen/_10ssp" />

                                </androidx.cardview.widget.CardView>


                            </LinearLayout>


                            //upper title

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="D.O.B"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_7ssp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_73sdp"
                                    android:text="Phone"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_7ssp" />
                            </LinearLayout>
                            //down title

                            <LinearLayout
                                android:layout_width="@dimen/_190sdp"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp">


                                    <EditText
                                        android:layout_width="@dimen/_80sdp"
                                        android:layout_height="wrap_content"
                                        android:hint="DD-MM-YYYY"
                                        android:inputType="date"
                                        android:id="@+id/date"
                                        android:textSize="@dimen/_10ssp" />

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_marginTop="@dimen/_5sdp">


                                    <EditText
                                        android:layout_width="@dimen/_80sdp"
                                        android:layout_height="wrap_content"
                                        android:hint="+91"
                                        android:inputType="number"
                                        android:maxLines="1"
                                        android:maxLength="10"
                                        android:textSize="@dimen/_10ssp" />

                                </androidx.cardview.widget.CardView>


                            </LinearLayout>

                            //mail

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="E-mail"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_7ssp" />

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp">

                                    <EditText
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint=" /@gmail.com/"
                                        android:id="@+id/mail"
                                        android:inputType="textEmailAddress"
                                        android:maxLines="1"
                                        android:textSize="@dimen/_10ssp" />

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                            //address

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Address"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_7ssp" />

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp">

                                    <EditText
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_50sdp"
                                        android:hint=""
                                        android:id="@+id/address"
                                        android:maxLines="3"
                                        android:textSize="@dimen/_10ssp" />

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                            //proffesional title

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Professional Title"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_7ssp" />

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp">

                                    <EditText
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="Android Developer"
                                        android:inputType="text"
                                        android:id="@+id/ptitle"
                                        android:maxLines="1"
                                        android:textSize="@dimen/_10ssp" />

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    //button

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:src="@drawable/btnadd" />


                </LinearLayout>


            </ScrollView>

        </LinearLayout>


        //njnxjj

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:orientation="horizontal">
            //Categories

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/img01" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/_7sdp"
                        android:text="Personal Details"
                        android:textSize="@dimen/_6ssp" />

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/img2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/_7sdp"
                        android:text="Objectives"
                        android:textSize="@dimen/_6ssp" />


                    <ImageView
                        android:id="@+id/img3"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/img3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/_7sdp"
                        android:text="Education Details"
                        android:textSize="@dimen/_6ssp" />


                    <ImageView
                        android:id="@+id/img4"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/img4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/_7sdp"
                        android:text="Skill Details"
                        android:textSize="@dimen/_6ssp" />

                    <ImageView
                        android:id="@+id/img5"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/img5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Work Experience"
                        android:textSize="@dimen/_6ssp" />

                    <ImageView
                        android:id="@+id/img6"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/img6" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/_7sdp"
                        android:text="Achievements"
                        android:textSize="@dimen/_6ssp" />

                    <ImageView
                        android:id="@+id/img7"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/img7" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/_7sdp"
                        android:text="Project Details"
                        android:textSize="@dimen/_6ssp" />

                    <ImageView
                        android:id="@+id/img8"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/img8" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Interest"
                        android:textSize="@dimen/_6ssp" />

                    <ImageView
                        android:id="@+id/img9"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/img9"
                        tools:ignore="DuplicateIds" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Languages"
                        android:textSize="@dimen/_6ssp" />
                    <ImageView
                        android:id="@+id/img10"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/img10" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Reference"
                        android:textSize="@dimen/_6ssp" />
                    <ImageView
                        android:id="@+id/img11"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/img11" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Additional Details"
                        android:textSize="@dimen/_6ssp" />
                    <ImageView
                        android:id="@+id/img12"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/img12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Publication"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:textSize="@dimen/_6ssp" />

                </LinearLayout>

            </ScrollView>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>